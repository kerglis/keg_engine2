source 'http://rubygems.org'

# Declare your gem's dependencies in keg_engine.gemspec.
# Bundler will treat runtime dependencies like base dependencies, and
# development dependencies will be added by default to the :development group.
gemspec

gem 'rails', '~> 4.0'

gem 'jquery-rails'
gem 'haml-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

gem 'redactor-rails'
gem 'carrierwave'
gem 'mini_magick'
gem 'meta_search'
gem 'bootstrap-sass', '< 3.0'
gem 'redactor-rails'

group :assets do
  gem 'sass-rails', '~> 4.0.0'
  gem 'uglifier', '>= 1.3.0'
  gem 'coffee-rails', '~> 4.0.0'
  gem 'less-rails'
  gem 'therubyracer'
  gem 'quiet_assets', group: :development
end

group :development do
  gem 'thin'
  gem 'capistrano'
  gem 'pry-rails'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'database_cleaner'
end